- content_for :title, I18n.t('views.articles.index.articles')
#main{:role => "main"}
  .banner-small{:style => "background-image: linear-gradient(-225deg, rgba(0,101,168,0.0) 0%, rgba(0,36,61,0.2) 50%), url('"}
  = cl_image_path(at/ship.jpg, :client_hints=true, :transformation=[{:width=1700, :height=850, :dpr=auto, :gravity=south, :crop=fill}])
  ');"&gt;
  %div
    %h1.big.fadeInRightBig.animated Blog
#main-content
  .container
    .description-center
    .row
      .col-sm-12.col-sm-12.col-md-12
        .text-boxes
          - @articles.each do |article|
            .row.text-box.text-box-title-above
              .col-sm-12
                %h2
                  = link_to article.title, article_path(article), class: '', style:'text-decoration: none'
                .toolbar
                  .btn.btn-link>
                  'text-decoration: none'&gt;
              .row
                .col-sm-3
                  %p>
                  'text-center'&gt;
                = cl_image_tag(article.photo.presence || at/apple.jpg,                               |
                  :client_hints=true,                                                                |
                  :transformation=[{:height = 180, :width = 300, :dpr=auto, :gravity=, :crop=fill}], |
                  :class = img-responsive center-block img-rounded-half )                            |
              .col-sm-9
                %p
                  = article.description.first(500).html_safe
                %i.fa.fa-calendar
                = article.created_at.strftime(%B %d %Y)
                = link_to Mas informacion, article_path(article), class: btn btn-contrast
            %hr.hr-half
#scroll-to-top.fade
  %i.fa.fa-chevron-up
