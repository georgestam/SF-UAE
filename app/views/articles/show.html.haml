:sass
  .prose 
    line-height: 35px !important
    font-weight: 200 !important
    font-size: 18px !important
    margin: 3.2rem 0 !important


- content_for :title, "#{@article.title}"

#main{:role => "main"}
  .hidden-xs.hidden-sm{:class => "visiblr-md-* visible-lg-*"}
    .banner-small{:style => "background-image: linear-gradient(-225deg, rgba(0,101,168,0.0) 0%, rgba(0,36,61,0.2) 50%), url('#{cl_image_path( @article.photo.presence || "at/apple.jpg", :client_hints=>true, :transformation=>[{:width=>1700, :height=>850, :dpr=>"auto", :gravity=> @article.gravity, :crop=>"fill"}])}');"}
  .hidden-md.hidden-lg{:class => "visible-xs-* visible-sm-*"}
    .banner-small{:style => "background-image: linear-gradient(-225deg, rgba(0,101,168,0.0) 0%, rgba(0,36,61,0.2) 50%), url('#{cl_image_path( @article.photo.presence || "at/apple.jpg", :client_hints=>true, :transformation=>[{:x=>@article.x_mobil, :y=>@article.y_mobil,:width=>3400, :height=>1700, :dpr=>"auto", :gravity=>"", :crop=>"crop"}])}');"}
  .container
    %ol.breadcrumb
      %li
        %i.fa.fa-home.pr-10
        %a{:href => "/"}
          = t('.home')
      %li
        %i.fa.fa-home.pr-10
        %a{:href => "/articles"}
          = t('.news')
      %li.active
        = @article.title
  .container
    .row
      .col-xs-12.col-sm-push-1.col-sm-10
        %div
          .row.text-box-title-above.text-box-big-image
            .col-sm-12
              %h1.article-title
                = @article.title
              %p
                %span
                  Published on #{@article.created_at.strftime("%B %d %Y")}
              %hr{:style => "margin-bottom:10px"}/
              .row
                .col-sm-12.prose
                  %h8
                    = @article.description.html_safe
              %div
                = link_to 'Back', articles_path, class: "btn btn-gray-transparent", style: "margin-bottom: 20px"


