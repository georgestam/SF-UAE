#subscribe.linked
%section.section.clearfix
  .container    
    .row
      .col-sm-8.col-sm-offset-2.call-to-action.text-center
        %h1.title{:style => "margin: 20px 0  !important"}
          = t '.call_to_action'
    .row
      .col-md-12
        .call-to-action.pv-40.text-center
          .row
            .col-sm-8.col-sm-offset-2
              %form.form-inline.margin-clear
                .form-group.has-feedback.no-box
                  = simple_form_for @user, url: user_registration_path do |f|
                    = flash[:notice]
                    = f.input :name, placeholder: I18n.t('views.pages.home.name' ), label: false, required: true
                    = f.input :email, placeholder: I18n.t('views.pages.home.email' ), label: false, required: true
                    = f.hidden_field :password, value: '12345678'
                    = f.hidden_field :password_confirmation, value: '12345678'
                    = f.button :submit, I18n.t('views.shared.footer.subscribe' ), class: "btn btn-lg btn-default.btn-animated margin-clear", id: "register" 
          
          
.separator.mb-20
          
                    
/ section end
/ section
/ ================


    
            

%section.pv-30
  .container
    .row
      .text-centre.col-xs-12.col-md-push-2.col-md-8
        %br/
        %div{:role => "tabpanel"}
          / Nav tabs
          %ul.nav.nav-tabs.style-1{:role => "tablist"}
            %li.active{:role => "presentation"}
              %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#home", :role => "tab"}
                %i.icon-question.pr-10
                = t '.what'
            %li{:role => "presentation"}
              %a{"aria-controls" => "messages", "data-toggle" => "tab", :href => "#messages", :role => "tab"}= t '.why'
          / Tab panes
          .tab-content
            #home.tab-pane.fade.in.active{:role => "tabpanel"}
              .embed-responsive.embed-responsive-16by9
                - if I18n.locale == :ea
                  %iframe{:allowfullscreen => "", :frameborder => "0", :height => "425", :src => "https://www.youtube.com/embed/Dj4nn4nZnc8", :width => "750"}
                - else
                  %iframe{:allowfullscreen => "", :frameborder => "0", :height => "425", :src => "https://www.youtube.com/embed/UodA9XdKQkE", :width => "750"}
            #messages.tab-pane.fade.smooth-scroll{:role => "tabpanel"}
              %p
                %strong
                  = t '.why_1'
              %p
                = t '.why_2'
                %br/
                %br/
                = t '.why_3'
                = succeed "." do
                  %a{:href => "#footer"}= t '.here'
                = t '.why_4'
                %br/
                %br/
                = t '.why_5'
                %a{:href => "https://www.youtube.com/watch?v=pq1qqdxZWbc&list=PLJj-2-ZfLCt8_d1_vyt_g6mWAmKnoVwyt"}= t '.here'
                = t '.why_6'
  %br/
