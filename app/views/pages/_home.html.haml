
#banner
.banner{:style => "background-image: linear-gradient(210deg, rgba(0,101,168,0.1) 20%, rgba(0,36,61,0.5) 50%), url('#{cl_image_path("ST-UEA/starfish1.jpg", :client_hints=>true, :transformation=>[{:x=>0, :y=>0, :width=>2000, :height=>1000, :dpr=>"auto", :crop=>"fill"}])}');"}
  .banner-content
    %h1.logo-font-starfish.fadeInRightBig.animated 
      = t '.home_title'
    %p.normal.fadeInLeftBig.animated
      = t '.home_subtitle_1'
      %br
      = t '.home_subtitle_2' 
    %p
      %a.btn.btn-lg.btn-default.btn-animated.scrollspy.margin-clear.smooth-scroll{:href => "#subscribe"}
        = t '.apply_now'
        %i.fa.fa-arrow-right.pl-20
  .col-md-12.text-center.banner-arrow
    %a.btn.btn-lg.moving.smooth-scroll{:href => "#subscribe"}
      %i.icon-down-open-big
      %i.icon-down-open-big
      %i.icon-down-open-big


:sass
  .no-box
    box-shadow: inset 0 0 0 rgba(0, 0, 0, 0) !important

/ section start
/ ================
#subscribe.linked
%section.section.clearfix
  .container    
    .row
      .col-sm-8.col-sm-offset-2.call-to-action.text-center
        %h1.title{:style => "margin: 20px 0  !important"}
          = t '.call_to_action'
    .row
      .col-md-12
        .call-to-action.pv-40.text-center
          .row
            .col-sm-8.col-sm-offset-2
              -# %form.form-inline.margin-clear
              .form-inline.margin-clear
                = simple_form_for @user, url: user_registration_path do |f|
                  -# = flash[:notice]
                  = f.input :name, label: false, placeholder: I18n.t('views.shared.footer.name' ), required: true
                  = f.input :email, label: false, placeholder: I18n.t('views.shared.footer.email' ), required: true
                  = f.button :submit, I18n.t('views.shared.footer.subscribe' ), class: "btn btn-lg btn-default.btn-animated margin-clear", id: "register"
                        
                                      
                      