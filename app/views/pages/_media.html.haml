:sass

  .story-margin
    margin: 0 0 20px 0 !important
  
  #story-picture
    display: inline !important

#media.linked
%section.section.clearfix
  .container
    .row
      - if @articles.any?
        .col-md-8
          -# %h3{dir: @dir}
          %h3
            = t (".latest")
            %span.text-default 
              = t (".news")
          .separator-2
          .block
            - @articles.each do |article|
              .media.margin-clear
                .media-left
                  = cl_image_tag article.photo.presence || "at/apple.jpg",                               
                    client_hints: true,                                                                
                    transformation: [{dpr:"auto"}], 
                    class: "media-object"                           
                .media-body{dir: @dir}
                  %h5.media-heading
                    = link_to article.title, article_path(article)
                  %p.small
                    = article.created_at.strftime("%B %d %Y")
                  %p.margin-clear.small 
                    = article.description.first(200).html_safe
                    = "..."
                  = link_to (t'.read_more'), article_path(article)
                %hr
            = link_to t('.more_news'), articles_path, class: "btn btn-dark"
      - if @stories.any?
        .col-md-4
          -# %h3{dir: @dir}
          %h3
            = t (".top")
            %span.text-default 
              = t (".stories")
          .separator-2
          .owl-carousel.content-slider-with-large-controls-autoplay.dark-controls.light-gray-bg.buttons-hide
            - @stories.each do |story|
              .image-box.style-2{dir: @dir}
                .overlay-container.overlay-visible
                  = cl_image_tag story.photo.presence || "at/apple.jpg",                               
                    client_hints: true,                                                                
                    transformation: [{dpr:"auto"}], 
                    class: "media-object",
                    id: "story-picture"
                  = link_to story_path(story), class: "overlay-link" do
                    %i.fa.fa-link
                .body.padding-horizontal-clear
                  %h5.media-heading.story-margin
                    = story.title.upcase
                  %p.margin-clear.small.story-margin
                    = story.description.first(300).html_safe
                    = "..."
                  = link_to (t'.read_more'), story_path(story), class:"link-dark"
                  %i.pl-5.fa.fa-angle-double-right
          
          = link_to t('.more_stories'), stories_path, class: "btn btn-dark"
      

